<h3>
  Evaluating <%= @sales_associate.first_name %> <%= @sales_associate.last_name %>
  <br/><small>please tell us your opinion over this sales associate</small>
</h3>
<%= form_for [@sales_associate, @rating] do |f|%>
    <% if @rating.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
            <% @rating.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :welcome_score, t(".welcome_score") %><br>
      <div name="rating[welcome_score]" class="welcome_score" data-value="<%= @rating.welcome_score%>"></div>
    </div>
    <div class="field">
      <%= f.label :appearance_score , t(".appearance_score")%><br>
      <div name="rating[appearance_score]" class="appearance_score" data-value="<%= @rating.appearance_score%>"></div>
    </div>
    <div class="field">
      <%= f.label :knowledge_score, t(".knowledge_score") %><br>
      <div name="rating[knowledge_score]" class="knowledge_score" data-value="<%= @rating.knowledge_score%>"></div>
    </div>
    <div class="field">
      <%= f.label :listening_score , t(".listening_score")%><br>
      <div name="rating[listening_score]" class="listening_score" data-value="<%= @rating.listening_score%>"></div>
    </div>
    <div class="field">
      <%= f.label :global_score, t(".global_score") %><br>
      <div name="rating[global_score]" class="global_score" data-value="<%= @rating.global_score%>"></div>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <%= f.submit t(".submit"), class: "btn btn-primary"%>
    <%= link_to t(".back"), @sales_associate, class: "btn btn-default"%>
<% end %>


<script type="application/javascript">
  $(document).on("page:change", function(){
    rateField(".global_score");
    rateField(".listening_score");
    rateField(".knowledge_score");
    rateField(".appearance_score");
    rateField(".welcome_score");
  });
</script>
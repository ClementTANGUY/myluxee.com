<div class="modal fade" id="wizard-new-account-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">SIGN UP <small>(It's Free)</small>
          <br/><small>Already have an account as a shopper ?<a href="javascript:" id="signin-link"> Log in</a></small>
        </h4>

      </div>
      <div class="modal-body">

        <div class="row">
          <div class=" col-md-6 ">
            <h5>Sign up with your social networks</h5>
            <br>
            <%= link_to "auth/facebook?resource=account", class: "btn btn-block btn-social btn-facebook" do %>
                <i class="fa fa-facebook"></i> <%= t("sales_associates.wizard_new.sigin_fb")%>
            <% end %> <br/>
            <%= link_to "auth/linkedin?resource=account", class: "btn btn-block btn-social btn-linkedin" do %>
                <i class="fa fa-linkedin"></i> <%= t("sales_associates.wizard_new.sigin_lk")%>
            <% end %> <br/>

          </div>
          <div class="col-md-6 ">
            <%= form_for Account.new do |f| %>
                <h5>Sign up with your email</h5>
                <br/>
                <p>
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name, class: "form-control", required: true %>
                </p>
                <p>
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name, class: "form-control", required: true %>
                </p>
                <p>
                  <%= f.label :email %><br />
                  <%= f.text_field :email, class: "form-control", required: true %>
                </p>
                <p>
                  <%= f.label :password %><br />
                  <%= f.password_field :password, class: "form-control", required: true %>
                </p>
                <p>
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, class: "form-control", required: true %>
                </p>
                <%= f.submit "Sign Up", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    $("#wizard-new-account-modal a#signin-link").click(function () {
        $('#wizard-new-account-modal').modal('hide');
        $('#wizard-new-account-session-modal').modal('show');

    });
</script>
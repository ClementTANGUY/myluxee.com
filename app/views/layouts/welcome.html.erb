<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>MyLuxee - Keep in touch with luxury stores</title>
    <meta name="description" content="MyLuxee connects worldwide shoppers to their favorite luxury stores through the first community of salespeople. Easy & free !"/>

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta property="og:title" content="MyLuxee - Keep in touch with luxury stores"/>
    <meta property="og:type" content="article" />
    <meta property="og:url" content="http://www.myluxee.com/" />
    <meta property="og:image" content="<%= asset_url "images/photowrapper2" %>" />
    <meta property="og:description" content="MyLuxee is the first community of salespeople in luxury retail, allowing worldwide shoppers to improve their in-store experience thanks to privileged contacts in the points of sale"/>
    <meta property="og:site_name" content="MyLuxee" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@MyLuxee">
    <meta name="twitter:title" content="MyLuxee - Keep in touch with luxury stores">
    <meta name="twitter:description" content="MyLuxee is the first community of salespeople in luxury retail, allowing worldwide shoppers to improve their in-store experience thanks to privileged contacts in the points of sale">
    <meta name="twitter:creator" content="@author_handle">
    <meta name="twitter:image:src" content="<%= asset_url "images/photowrapper2" %>">


    <%= stylesheet_link_tag 'welcome' %>
    <%= javascript_include_tag  "welcome.js" %>

  </head>

  <body>
  <!-- TODO <body class="<%= "page_classes" %>">-->
  <%= render partial: 'alert_area' %>
    <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: "navbar-brand" do %>
            <%=image_tag "Logo.png" %>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "#benefits" do %>
                About
              <% end %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Sales associates<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Log in', "#", data: { toggle: "modal", target: "#wizard-new-session-modal" }  %></li>
                <li><%= link_to 'Become a Luxee', "#", data: { toggle: "modal", target: "#wizard-new-modal" }  %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Social<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to  "http://facebook.com/MyLuxee", target: "_blank" do %>
                      <i class="fa fa-facebook-square"></i> Facebook
                  <% end %>
                </li>
                <li><%= link_to "http://twitter.com/MyLuxee", target: "_blank" do %>
                      <i class="fa fa-twitter"></i> Twitter
                  <% end %>
                </li>
                <li><%= link_to "https://www.linkedin.com/company/myluxee", target: "_blank" do %>
                      <i class="fa fa-linkedin"></i> LinkedIn
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= render "sales_associates/wizard_new" %>
    <%= render "devise/sessions/wizard_new" %>
    <%= yield %>

    <div id="footer">
      <div class="container text-center">
        <p>Â©<%= Time.now.year %> MyLuxee</p>
          <ul class="list-inline">
            <li><%= link_to raw('<i class="fa fa-facebook fa-2x"></i>'), "http://facebook.com/MyLuxee", target: "blank" %></li>
            <li></li>
            <li><%= link_to raw('<i class="fa fa-twitter fa-2x"></i>'), "http://twitter.com/MyLuxee", target: "blank" %></li>
            <li></li>
            <li><%= link_to raw('<i class="fa fa-linkedin fa-2x"></i>'), "https://www.linkedin.com/company/myluxee", target: "blank" %></li>
            <li></li>
            <li><%= mail_to "contact@myluxee.com", raw('<i class="fa fa-envelope fa-2x"></i>') %></li>
          </ul>
      </div>
    </div>
  </body>
</html>

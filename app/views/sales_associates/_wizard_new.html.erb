<div class="modal fade" id="wizard-new-sales-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">SIGN UP <small>(it's free)</small>
          <br><small>Already have an account as salespeople ? <a href="javascript:" id="signin-link">Log in</a></small>
        </h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class=" col-md-6 ">
            <h5>Sign up with your social networks</h5>
            <br>
            <%= link_to "auth/facebook?resource=sales_associate", class: "btn btn-block btn-social btn-facebook" do %>
                <i class="fa fa-facebook"></i> <%= t("sales_associates.wizard_new.sigin_fb")%>
            <% end %> <br/>
            <%= link_to "auth/linkedin?resource=sales_associate", class: "btn btn-block btn-social btn-linkedin" do %>
                <i class="fa fa-linkedin"></i> <%= t("sales_associates.wizard_new.sigin_lk")%>
            <% end %> <br/>
          </div>
          <div class="col-md-6 ">
            <%= form_for SalesAssociate.new, url: new_sales_associate_registration_path, :html => {method: :get} do |f| %>   
              <h5>Sign up with your email</h5>
                <br>
                <p class="field">
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name, class: "form-control" %>
                </p>
                <p class="field">
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name, class: "form-control" %>
                </p>
                <p class="field">
                  <%= f.label :email %><br />
                  <%= f.text_field :email, class: "form-control" %>
                </p>
                <%= f.submit "Sign up", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $("#wizard-new-sales-modal a#signin-link").click(function () {
    $('#wizard-new-sales-modal').modal('hide');
    $('#wizard-new-sales-session-modal').modal('show');

    });
</script>
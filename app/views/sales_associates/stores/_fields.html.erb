<div class="field ">
  <%= fields.label :brand %>
  <%= fields.select :brand_id, Brand.all.collect { |b| [b.name, b.id] }, {}, class: "form-control" %>
</div>

<%= fields.fields_for :positions, @position do |position| %>
    <%= position.hidden_field :sales_associate_id %>
    <div class="field ">
      <%= position.label :start_date, t("sales_associates.stores.position_form.start_date") %>
      <div class="input-group">
        <%= position.text_field :start_date, data: {provide: 'datepicker'}, class: "form-control", required: true %>
        <div class="input-group-addon"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></div>
      </div>
    </div>
    <div class="field">
      <%= position.label :role, t("sales_associates.stores.position_form.role") %>
      <%= position.select :role, Position::ROLE_LIST, class: "form-control" %>
    </div>
    <div class="field form-horizontal">
      <h4><%= t(".my_timetable") %></h4>
      <div class="form-group form-group-sm ">
        <%= position.label :monday, class: "control-label" %>
        <%= position.check_box :monday, class: " checkbox-week " %>

        <div class="checkbox-week" <%= raw 'style="display:none;"' unless position.object.monday? %>>
          <%= position.label :monday_start, class: "sr-only" %>
          <%= position.text_field :monday_start, class: "time" %>

          <%= position.label :monday_end, class: "sr-only" %>

<h1>Listing Stores</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search address...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Search Store!</button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<table class="table ">
  <thead>
  <tr>
    <th>Address</th>


  </tr>
  </thead>

  <tbody>
  <% @stores.each do |store| %>
      <tr>
        <td><%= raw address_format(store) %></td>

        <td>
          <% if current_sales_associate.old_stores.exists?(id: store.id) %>
              <%= link_to t(".undo"), undo_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                          class: "btn btn-default", method: :post %>
          <% elsif current_sales_associate.stores.exists?(id: store.id)%>
              <%= link_to t(".deselect"), finish_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                          class: "btn btn-primary btn-danger", remote: true, data: {target: "modal", toogle: "my-modal"}  %>

          <% else %>
              <%= link_to t(".select"), new_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                          class: "btn btn-primary", remote: true, data: {target: "modal", toogle: "my-modal"}  %>
          <% end%>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>

<div class="modal fade" role="dialog" id="my-modal" title="<%= t(".modal")%>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-body a-unique-class">

      </div>

    </div>
  </div>
</div>
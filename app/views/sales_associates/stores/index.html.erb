<h1>Listing Stores</h1>

<%= render partial: "filter"%>

<small><%= link_to t(".new_store"), new_sales_associate_store_path(sales_associate_id: current_sales_associate)%></small>
<% unless @stores.empty? %>
    <table class="table ">
      <thead>
      <tr>
        <th>Address</th>
      </tr>
      </thead>
      <tbody>
      <% @stores.each do |store| %>
          <tr>
            <td><%= raw address_format(store) %></td>

            <td>
              <% if current_sales_associate.old_stores.exists?(id: store.id) %>
                  <%= link_to t(".undo"), undo_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                              class: "btn btn-default", method: :post %>
                  <%= link_to t(".destroy"), destroy_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                              class: "btn btn-danger", method: :delete, confirm: t(".confirm") %>

            <% elsif current_sales_associate.stores.exists?(id: store.id)%>
                  <%= link_to edit_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                              class: "btn btn-primary btn-danger", remote: true, data: {target: "modal", toogle: "my-modal"}  do%>
                    <%= raw t(".deselect")%>
                  <% end %>
                  <%= link_to destroy_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                              class: "btn btn-danger", method: :delete, data:{ confirm: t(".confirm")} do%>
                      <%= raw t(".destroy") %>
                  <% end %>
              <% else %>
                  <%= link_to t(".select"), new_position_sales_associate_store_path(id: store, sales_associate_id: current_sales_associate),
                              class: "btn btn-primary", remote: true, data: {target: "modal", toogle: "my-modal"}  %>
              <% end%>
            </td>

          </tr>
      <% end %>
      </tbody>
    </table>

    <div class="modal fade" role="dialog" id="my-modal" title="<%= t(".modal")%>">
      <div class="modal-dialog" role="document">
        <div class="modal-content">

          <div class="modal-body a-unique-class">

          </div>

        </div>
      </div>
    </div>
<% else %>
    <div class="jumbotron">
      <div class="container text-center">
        <h4>No stores were found.</h4> <br/>May you should <%= link_to t(".new"), new_sales_associate_store_path(sales_associate_id: current_sales_associate)%>
      </div>
    </div>

<% end %>
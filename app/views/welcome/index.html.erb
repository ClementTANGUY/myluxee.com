<div id="wrapper">

  <div class="container text-left">
    <h1>Connect to your favorite luxury stores</h1>
  </div>

  <div class="vertical-spacer"></div>

  <div class="container find_search padded">
    <div class="panel">
      <div class="panel-heading">
        The first network of salespeople for personal shopping
      </div>
      <div class="panel-body">
        <%= form_tag welcome_locate_path, method: :get, class: "row" do %>
            <div class="form-group col-md-10">
              <%= label_tag :place, nil, class: "sr-only" %>
              <%= text_field_tag :place, @place, class: "form-control", placeholder: t(".place") %>
            </div>
            <div class="col-md-2">
              <%= submit_tag t(".find_store"), class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="vertical-spacer"></div>
</div>


<div class="container padded" id="benefits">

  <div class="container text-left title">
    <h3>Close to the customers. Close to the brands.</h3>
  </div>

  <div class="vertical-spacer"></div>

  <div class="row text-center">
    <div class="col-sm-6 col-md-3">
      <div class="features" data-sr="wait 0.2s, over 0.7s, scale up 30%">
        <%= image_tag "locate.svg" %>
        <p>
          Locate sales associates who speak your own language
        </p>
      </div>
    </div>
    <div class="col-sm-6 col-md-3">
      <div class="features" data-sr="wait 0.4s, over 0.7s, scale up 30%">
        <%= image_tag "availability.svg" %>
        <p>
          Contact available assistants, regular, according to their timetables
        </p>
      </div>
    </div>
    <div class="col-sm-6 col-md-3">
      <div class="features" data-sr="wait 0.6s, over 0.7s, scale up 30%">
        <%= image_tag "notify.svg" %>
        <p>
          Give notice of your visit, chat for personal advice and setting goods aside
        </p>
      </div>
    </div>
    <div class="col-sm-6 col-md-3">
      <div class="features" data-sr="wait 0.8s, over 0.7s, scale up 30%">
        <%= image_tag "rating.svg" %>
        <p>
          Rate your shopping experience
        </p>
      </div>
    </div>

  </div>

</div>


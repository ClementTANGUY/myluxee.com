<div class="panel">
  <div class="panel-body">

    <%= form_tag welcome_locate_path, class: "form-horizontal collapse", id: "search-form", method: :get do %>
        <h4><%= t(".filter") %></h4>
        <%= hidden_field_tag :place, @place%>
        <div class="form-group form-group-sm">
          <%= label_tag :address, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= text_field_tag :address, @address, class: "form-control" %>
          </div>
        </div>
        <div class="form-group form-group-sm">
          <%= label_tag :brand, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= select_tag :brand, options_for_select(Brand.all.collect { |brand| [brand.name, brand.id] }, @brand), width: "100%", class: "form-control", include_blank: true %>
          </div>
        </div>
        <div class="form-group form-group-sm">
          <%= label_tag :speciality, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= select_tag :speciality, options_for_select(Brand.specialities, @speciality), class: "form-control", width: "100%", include_blank: true %>
          </div>
        </div>
        <div class="form-group form-group-sm">
          <div class="col-sm-offset-2 col-sm-10 text-right">
            <%= submit_tag :search, class: "btn btn-primary btn-sm " %>
          </div>
        </div>
    <% end %>
    <div class="form-group form-group-sm" id="">
      <div class="col-sm-offset-2 col-sm-10 text-right">
        <a href="javascript:" class="btn btn-primary btn-sm toggle-text" data-toggle="collapse"
           data-target="#search-form">
          <span><div class="glyphicon glyphicon-search"></div> <%= t(".show") %></span>
          <span style="display: none;"><div class="glyphicon glyphicon-search"></div> <%= t(".hide")%></span>
        </a>
      </div>
    </div>
  </div>
</div>